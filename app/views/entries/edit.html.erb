<div class="row justify-content-center">
  <div class="col-md-10 col-lg-8">
    <h1 class="mb-3">Edit Entry: <%= @entry.title %></h1>

    <%= form_with model: [@category, @entry], class: "mb-4" do |form| %>
      <% if @entry.errors.any? %>
        <div class="alert alert-danger">
          <h4 class="alert-heading"><%= pluralize(@entry.errors.count, "error") %> prohibited this entry from being saved:</h4>
          <ul class="mb-0">
            <% @entry.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-3">
        <%= form.label :title, class: "form-label fw-bold" %>
        <%= form.text_field :title, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :content, class: "form-label fw-bold" %>
        <%= form.text_area :content, rows: 10, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.submit "Update Entry", class: "btn btn-primary" %>
      </div>
    <% end %>

    <div class="d-flex gap-2">
      <%= link_to "← Back to Entry", category_entry_path(@category, @entry), class: "text-decoration-none me-3" %>
      <%= link_to "← Back to #{@category.name}", category_path(@category), class: "text-decoration-none" %>
    </div>
  </div>
</div>
