<div class="row justify-content-center">
  <div class="col-md-10 col-lg-8">
    <h1 class="mb-4"><%= @entry.title %></h1>

    <div class="card mb-4 border-0 bg-light">
      <div class="card-body">
        <p class="mb-2"><strong>Category:</strong> <%= link_to @category.name, category_path(@category), class: "text-decoration-none" %></p>
        <p class="mb-0 text-muted"><small><strong>Created:</strong> <%= @entry.created_at.strftime("%B %d, %Y at %I:%M %p") %></small></p>
      </div>
    </div>

    <div class="card mb-4">
      <div class="card-header">
        <h2 class="mb-0 h5">Content</h2>
      </div>
      <div class="card-body">
        <div class="entry-content">
          <%= simple_format(@entry.content) %>
        </div>
      </div>
    </div>

    <div class="d-flex gap-2 mb-3">
      <%= link_to "Edit", edit_category_entry_path(@category, @entry), class: "btn btn-warning" %>
      <%= link_to "Delete", category_entry_path(@category, @entry), 
          data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this entry?" },
          class: "btn btn-danger" %>
      <%= link_to "← Back to #{@category.name}", category_path(@category), class: "btn btn-outline-secondary ms-auto" %>
    </div>
  </div>
</div>
