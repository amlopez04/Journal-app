<div class="row justify-content-center">
  <div class="col-md-8">
    <h1 class="mb-3">Create a New Category</h1>
    <p class="text-muted mb-4">Organize your journal entries by creating categories (e.g., "Work", "Personal", "Travel").</p>

    <%= form_with model: @category, url: categories_url, class: "mb-4" do |form| %>
      <% if @category.errors.any? %>
        <div class="alert alert-danger">
          <h4 class="alert-heading"><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h4>
          <ul class="mb-0">
            <% @category.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-3">
        <%= form.label :name, class: "form-label fw-bold" %>
        <%= form.text_field :name, class: "form-control", placeholder: "Enter category name" %>
      </div>

      <div>
        <%= form.submit "Create Category", class: "btn btn-primary" %>
      </div>
    <% end %>

    <% if user_signed_in? && current_user.categories.any? %>
      <div class="mt-5 pt-4 border-top">
        <h2 class="mb-3">Your Categories</h2>
        <div class="list-group">
          <% current_user.categories.order(created_at: :desc).each do |category| %>
            <%= link_to category_path(category), class: "list-group-item list-group-item-action d-flex justify-content-between align-items-center" do %>
              <span class="fw-semibold"><%= category.name %></span>
              <span class="badge bg-primary rounded-pill"><%= pluralize(category.entries.count, 'entry') %></span>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
